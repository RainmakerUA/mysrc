<Page
    x:Class="RM.WP.GpsMonitor.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:int="using:Microsoft.Xaml.Interactivity"
	xmlns:intcore="using:Microsoft.Xaml.Interactions.Core"
	xmlns:l="using:RM.WP.GpsMonitor"
    xmlns:c="using:RM.WP.GpsMonitor.Common"
	xmlns:conv="using:RM.WP.GpsMonitor.Converters"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
	DataContext="{Binding ViewModel,RelativeSource={RelativeSource Self}}" >
	<int:Interaction.Behaviors>
		<c:ProgressBehavior x:Name="MainLoadingProgress" x:Uid="MainLoadingProgress" IsVisible="{Binding IsLoading}" />
	</int:Interaction.Behaviors>
	<Page.Resources>
		<conv:CoordinateToStringConverter x:Key="LatitudeConverter" MarkKey="Lat" />
		<conv:CoordinateToStringConverter x:Key="LongitudeConverter" MarkKey="Long" />
	</Page.Resources>
	<StackPanel Orientation="Vertical">
		<TextBlock Text="{Binding AppTitle}" Style="{ThemeResource TitleTextBlockStyle}" />
		<ScrollViewer IsHorizontalRailEnabled="False" Padding="10"
					  MinZoomFactor="1.0" MaxZoomFactor="1.0">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				<TextBlock x:Name="LatitudeLabel" x:Uid="LatitudeLabel" Text="Latitude" Style="{StaticResource LabelBlock}" />
				<TextBlock Text="{Binding Location.Latitude,Converter={StaticResource LatitudeConverter}}" Style="{StaticResource ValueBlock}" Grid.Row="1" />
				<TextBlock x:Name="LongitudeLabel" x:Uid="LongitudeLabel" Text="Longitude" Style="{StaticResource LabelBlock}" Grid.Row="2" />
				<TextBlock Text="{Binding Location.Longitude,Converter={StaticResource LongitudeConverter}}" Style="{StaticResource ValueBlock}" Grid.Row="3" />
				<TextBlock x:Name="AltitudeLabel" x:Uid="AltitudeLabel" Text="Altitude" Style="{StaticResource LabelBlock}" Grid.Row="4" />
				<TextBlock Text="{Binding Location.Altitude}" Style="{StaticResource ValueBlock}" Grid.Row="5" />
				<TextBlock x:Name="SpeedLabel" x:Uid="SpeedLabel" Text="Speed" Style="{StaticResource LabelBlock}" Grid.Row="6" />
				<TextBlock Text="{Binding Location.Speed}" Style="{StaticResource ValueBlock}" Grid.Row="7" />
				<TextBlock x:Name="HeadingLabel" x:Uid="HeadingLabel" Text="Heading" Style="{StaticResource LabelBlock}" Grid.Row="8" />
				<TextBlock Text="{Binding Location.Heading}" Style="{StaticResource ValueBlock}" Grid.Row="9" />
				<TextBlock x:Name="AccuracyLabel" x:Uid="AccuracyLabel" Text="Accuracy" Style="{StaticResource LabelBlock}" Grid.Row="10" />
				<TextBlock Text="Not implemented" Style="{StaticResource ValueBlock}" Grid.Row="11" />
				<TextBlock x:Name="AltAccuracyLabel" x:Uid="AltAccuracyLabel" Text="Altitude Accuracy" Style="{StaticResource LabelBlock}" Grid.Row="12" />
				<TextBlock Text="Not implemented" Style="{StaticResource ValueBlock}" Grid.Row="13" />
			</Grid>
		</ScrollViewer>
	</StackPanel>
	<Page.BottomAppBar>
		<CommandBar>
			<CommandBar.SecondaryCommands>
				<AppBarButton x:Name="SettingsAppBarButton" x:Uid="SettingsAppBarButton" Label="settings">
					<int:Interaction.Behaviors>
						<intcore:EventTriggerBehavior EventName="Click">
							<intcore:NavigateToPageAction TargetPage="RM.WP.GpsMonitor.SettingsPage" />
						</intcore:EventTriggerBehavior>
					</int:Interaction.Behaviors>
				</AppBarButton>
				<AppBarButton x:Name="AboutAppBarButton" x:Uid="AboutAppBarButton" Label="about">
					<int:Interaction.Behaviors>
						<intcore:EventTriggerBehavior EventName="Click">
							<intcore:NavigateToPageAction TargetPage="RM.WP.GpsMonitor.AboutPage" />
						</intcore:EventTriggerBehavior>
					</int:Interaction.Behaviors>
				</AppBarButton>
			</CommandBar.SecondaryCommands>
		</CommandBar>
	</Page.BottomAppBar>
</Page>
